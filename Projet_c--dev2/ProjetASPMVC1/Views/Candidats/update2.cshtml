
@{
    ViewBag.Title = "update2";
}

@model ProjetASPMVC1.Models.Candidat
<!DOCTYPE html>
<html lang="zxx">
<head>
    <meta charset="UTF-8">
    <meta name="description" content="Sona Template">
    <meta name="keywords" content="Sona, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>ENSAS </title>
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Cabin:400,500,600,700&display=swap" rel="stylesheet">
    <!-- Css Styles -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="~/css/flaticon.css" type="text/css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="~/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/magnific-popup.css" type="text/css">
    <link rel="stylesheet" href="~/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/style.css" type="text/css">
    <style>

        body {
            font-family: montserrat, arial, verdana;
            background-image: url('../../img/papers.co-sj80-magic-color-purple-gradation-blur-40-wallpaper.jpg');
            height: 150%;
            background-size: cover;
        }

       

        .form {
            margin-top: 20px;
            margin-left: 400px;
            width: 600px;
            padding: 40px;
            border-left: 4px solid cornflowerblue;
            border-right: 4px solid cornflowerblue;
        }
    </style>
</head>
<body>
    <script type="text/javascript">function changetextbox() {
            if (document.getElementById("niveau").value == "3 éme année") {
                document.getElementById("s5").disabled = true;
                document.getElementById("s6").disabled = true;
            }

            else{
                document.getElementById("s5").disabled = false;
                document.getElementById("s6").disabled = false;
            }


        }</script>

    <header class="header-section">
        <div class="top-nav bg-white">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <ul class="tn-left">
                            <li><i class="fa fa-phone"></i> (12) 345 67890</li>
                            <li><i class="fa fa-envelope"></i>  ensasafi@gmail.com</li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <div class="tn-right">
                            <div class="top-social">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                            </div>
                            <a href="#" class="bk-btn bg-info">Ensa Safi</a>
                            <div class="language-option">
                                <img src='~/img/@Html.DisplayFor(model => model.photo)' style="margin-left:100px; float:left;border-radius:100px;" />
                                <span>Home<i class="fa fa-angle-down"></i></span>
                                <div class="flag-dropdown" style="width:200px;">
                                    <ul>
                                        <li>@Html.ActionLink("Home", "Home", "Candidats")</li>
                                        <li>@Html.ActionLink("Telecharger reçu", "EXportPDF", "Candidats", null, null)</li>
                                        <li>@Html.ActionLink("mes informations", "update", "Candidats", new { cin = ViewBag.CIN }, htmlAttributes: null)</li>
                                        <li>@Html.ActionLink("Diplomes obtenus", "update2", "Candidats", new { cin = ViewBag.CIN }, htmlAttributes: null)</li>
                                        <li>@Html.ActionLink("choix de filière", "update3", "Candidats", new { cin = ViewBag.CIN }, htmlAttributes: null)</li>
                                        <li>@Html.ActionLink("Télécharger les epreuvres", "Telecharger", "Candidats")</li>

                                        <li>@Html.ActionLink("Déconnexion", "LogOut", "Home")</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <br /><br /><br />
    <center >
        <h4 style="color:cornflowerblue;"> @Html.DisplayFor(model => model.prenom), veuillez modifier les informations des diplomes obtenus: </h4> <br />
        <h6 style="color:blue">@ViewBag.messageconfirm</h6>
    </center>
    <hr />
    <img src='~/img/@Html.DisplayFor(model => model.photo)' style="margin-left:100px; float:left;margin-top:100px;" />
    <form class="form" action="updatediplome" method="post">

        <div class="form-horizontal">
            <fieldset>
                <legend>Informations du baccalauréat :</legend>


                <div class="form-group">
                    <input type="text" name="type_bac" value=@Html.DisplayFor(model => model.type_bac) class="col-md-10" placeholder="entrer votre type du bac" required />
                </div>
                <div class="form-group">
                    <input type="text" name="annee_bac" value=@Html.DisplayFor(model => model.annee_bac) class="col-md-10" placeholder="entrer votre année du bac'" required />
                </div>
                <div class="form-group">
                    <input type="text" name="note_bac" value=@Html.DisplayFor(model => model.note_bac) class="col-md-10" placeholder="entrer votre note du bac" required />
                </div>
                <div class="form-group">
                    <input type="text" name="mention_bac" value=@Html.DisplayFor(model => model.mention_bac) class="col-md-10" placeholder="entrer votre mention du bac" required />
                </div>
            </fieldset>
            <fieldset>
                <legend> Informations sur le diplome obtenu :</legend>

                <div class="form-group">
                    <select class="col-md-10" value=@ViewBag.nomdip name="nom_diplome" required>
                        <option value="Licence">Licence</option>
                        <option value="Licence pro">Licence pro</option>
                        <option value="BUT">BUT</option>
                        <option value="DUT">DUT</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="text" name="ville_diplome" value=@ViewBag.villedip class="col-md-10" placeholder="entrer la ville" required />
                </div>
                <div class="form-group">
                    <input type="text" name="etablissment" value=@ViewBag.etab class="col-md-10" placeholder="entrer l'etablisstement" required />
                </div>
                <div class="form-group" id="niveau">
                    <select class="col-md-10" value=@Html.DisplayFor(model => model.niveau) name="niveau" onclick=changetextbox() required>
                        <option value="3 éme année">3 éme année</option>
                        <option value="4 éme année">4 éme année</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="text" name="s1" id="s1" value=@ViewBag.s1 class="col-md-10" placeholder="entrer votre note s1" required />
                </div>
                <div class="form-group">
                    <input type="text" name="s2" id="s2" value=@ViewBag.s2 class="col-md-10" placeholder="entrer votre note s2" required />
                </div>
                <div class="form-group">
                    <input type="text" name="s3" id="s3" value=@ViewBag.s3 class="col-md-10" placeholder="entrer votre note s3" required />
                </div>
                <div class="form-group">
                    <input type="text" name="s4" id="s4" value=@ViewBag.s4 class="col-md-10" placeholder="entrer votre note s4" required />
                </div>
                <div class="form-group">
                    <input type="text" name="s5" id="s5" value=@ViewBag.s5 class="col-md-10" placeholder="entrer votre note s5" required />
                </div>

                <div class="form-group">
                    <input type="text" name="s6" id="s6" value=@ViewBag.s6 class="col-md-10" placeholder="entrer votre note s6" required />
                </div>

            </fieldset>
            <input type="hidden" name="data" value=@ViewBag.CIN>

            <br />
            <div class="form-group">
                <input type="submit" value="valider les modifications" class="col-md-10" style="background-color:cadetblue" required />
            </div>
        </div>
    </form>

</body>
</html>
